#!/usr/bin/env bash

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

ENV_DIR=${3:-}

ssh_path="$ENV_DIR/SSH_KEY"
ssh_key="$(cat $ssh_path)"
ssh_hosts=${SSH_HOSTS:-"git@github.com"}

if [ "$ssh_key" != "" ]; then
	echo "-----> Running SSH private key setup"

	mkdir "$1/.ssh"
	ln -s "$1/.ssh" "$HOME/.ssh"

	# For some completely unknown reason the error "base64: invalid input"
	# is returned when the key is decoded. This appears to be because
	# Heroku strips the == from the end :/

	[[ "$ssh_key" == *== ]] || ssh_key="$ssh_key=="

	printf $ssh_key | base64 -d -i -w 0 > "$HOME/.ssh/id_rsa"

	echo "Host github.com
   IdentityFile ~/.ssh/id_rsa
   IdentitiesOnly yes" > "$HOME/.ssh/config"

  ssh-add -K "$HOME/.ssh/id_rsa"

	IFS=',' read -ra HOST <<< "$ssh_hosts"
	for i in "${HOST[@]}"; do
		ssh -oStrictHostKeyChecking=no -T $i 2>&1 | indent
	done

	exit 0
else
	echo "-----> No SSH private key to setup!"
fi
